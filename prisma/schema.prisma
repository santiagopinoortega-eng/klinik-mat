generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id // Clerk userId (no auto-generated)
  email         String          @unique
  emailVerified DateTime?       @map("email_verified")
  name          String?
  role          Role            @default(STUDENT)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  results       StudentResult[]

  @@map("users")
}

model Case {
  id         String       @id @default(cuid())
  title      String
  area       String       // Legacy: mantener para compatibilidad
  modulo     String?      // Nuevo: Anticoncepción, ITS, Consejería, Climaterio
  difficulty Int          // Legacy: 1, 2, 3
  dificultad String?      // Nuevo: "Baja", "Media", "Alta"
  summary    String?
  isPublic   Boolean      @default(false)
  vignette   String?
  feedbackDinamico Json?  @map("feedback_dinamico") // { bajo, medio, alto }
  createdAt  DateTime     @default(now()) @map("created_at")
  updatedAt  DateTime     @updatedAt @map("updated_at")
  questions  Question[]   @relation("CaseQuestions")
  norms      MinsalNorm[] @relation("CaseNorms")

  @@map("cases")
}

model Question {
  id      String   @id @default(cuid())
  order   Int
  text    String
  guia    String?
  feedbackDocente String?
  caseId  String
  options Option[] @relation("QuestionOptions")
  case    Case     @relation("CaseQuestions", fields: [caseId], references: [id])

  @@map("questions")
}

model Option {
  id         String   @id @default(cuid())
  text       String
  isCorrect  Boolean  @default(false)
  feedback   String?
  questionId String
  question   Question @relation("QuestionOptions", fields: [questionId], references: [id])

  @@map("options")
}

model MinsalNorm {
  id    String @id @default(cuid())
  name  String
  code  String @unique
  cases Case[] @relation("CaseNorms")

  @@map("minsal_norms")
}

model StudentResult {
  id          String   @id @default(cuid())
  userId      String
  caseId      String
  score       Int
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, caseId])
  @@map("student_results")
}

enum Role {
  STUDENT
  EDITOR
  ADMIN
}
