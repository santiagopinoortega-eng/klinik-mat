// tsconfig.json (La Versi√≥n Correcta y Definitiva)
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "Bundler", // Clave para Next.js 14
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Tus alias de paths
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"] // Mantenemos tu alias original
    },
    
    // Plugin de Next.js
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "prisma/seed.ts",
    "scripts/**/*.ts"
  ]
}